<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eghm.websocket.mapper.SlideMapper">
    <!-- 更新文档 -->
    <update id="savePartSlide" parameterType="com.eghm.websocket.model.Slide">
        update file_partslide
        set content = #{content}
        where id = #{id}
    </update>

    <select id="getSlideByFileId" parameterType="integer">
        select *
        from file_partslide
        where file_id = #{fileId}
    </select>

    <insert id="saveFileSlide" keyProperty="id" useGeneratedKeys="true" parameterType="com.eghm.websocket.model.FileSlide">
        insert into file_slide (file_id)
        values (#{fileId})
    </insert>

    <insert id="saveFilePartSlide" keyProperty="id" useGeneratedKeys="true" parameterType="com.eghm.websocket.model.FilePartSlide">
        insert into file_partslide (slideId, content)
        values (#{slideId,jdbcType=INTEGER}, #{content,jdbcType=VARCHAR});
    </insert>


</mapper>


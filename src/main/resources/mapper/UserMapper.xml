    <select id="getUserFriendList" parameterType="map" resultType="com.eghm.websocket.model.User">
		<![CDATA[
        select *
        from sys_user t
        where exists
                  (select 1
                   from zf_user_space r
                   where r.user_id = t.id
                     and r.user_id <> #{userId}
                     and r.space_id = ${spaceId})
        ]]>
	</select>

